
<%= simple_form_for(@card) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :legion %>
    <%= f.input :tier %>
    <%= f.input :type %>
    <%= f.input :stage %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
